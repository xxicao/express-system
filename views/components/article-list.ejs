<div class="page-header">
    <h3>
        文章列表
        <a class="btn btn-primary btn-sm pull-right" href="/admin/article/add" role="button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 新增文章</a>
    </h3>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>标题</th>
                <th>简介</th>
                <th>创建时间</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i< listData.length; i++) { %>
                <tr>
                    <td><%= listData[i].ID %></td>
                    <td><%= listData[i].title %></td>
                    <td><%= listData[i].introduction %></td>
                    <td><%= listData[i].createtime %></td>
                    <% if (listData[i].status == 0) { %>
                        <td>未发布</td>
                    <% } else { %>
                        <td>已发布</td>
                    <% } %>
                    <td>
                        <a href="/admin/article/edit?id=<%= listData[i].ID %>">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <% if (listData[i].status == 0) { %>
                            <a href="/admin/article/release?id=<%= listData[i].ID %>&&status=1">
                                <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
                            </a>
                        <% } else { %>
                            <a href="/admin/article/release?id=<%= listData[i].ID %>&&status=0">
                                <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
                            </a>
                        <% } %>
                        <a href="/admin/article/delete/<%= listData[i].ID %>">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            <% } %> 
               
        </tbody>
    </table>
</div>
            